<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client">
	<ui:style>
	
	</ui:style>

	<ui:with field='css' type='ui.client.resources.CSSAndImageResources' />
	<g:HTMLPanel styleName="{css.main.sep}">
		<g:HTMLPanel>
			<g:Anchor ui:field="linkTitle" />
		</g:HTMLPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Image ui:field="userImg" />
				<g:Label ui:field="userName" />
				<g:HorizontalPanel>
					<g:Label>Creation: </g:Label>
					<g:Label ui:field="creation" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Retweets:</g:Label>
					<g:Label ui:field="retweets" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Favorites:</g:Label>
					<g:Label ui:field="favorites" />
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<g:VerticalPanel styleName="{css.main.sepLeft}">
				<g:Label ui:field="body" />
			</g:VerticalPanel>

		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder>